{
  "version": 2,
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "api/send-email.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/send-email", "dest": "/api/send-email.js" },
    { "src": "/(index|portfolio|contact|services)\\.html", "dest": "/$1.html" },
    { "src": "/(.*\\.(jpg|png|gif|svg|ico))", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}