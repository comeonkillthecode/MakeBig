{
  "version": 2,
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "api/send-email.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/send-email", "dest": "/api/send-email.js" },
    { "src": "/services", "dest": "/services.html" },
    { "src": "/portfolio", "dest": "/portfolio.html" },
    { "src": "/contact", "dest": "/contact.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}